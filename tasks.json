{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "CMOC - build active file - target CoCo",
            "command": "C:\\cygwin64\\usr\\local\\bin\\cmoc.exe",
            "args": [
                "--verbose",
                "--coco",
                "-Werror",
                "-I",
                "${workspaceFolder}\\include",
                "-L",
                "${workspaceFolder}\\lib",
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.bin",
                "${fileBasename}",
                "-lbcontrol"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4,
                    "loop": true
                }
            }
        },
        {
            "type": "shell",
            "label": "CMOC - compile active file - target CoCo",
            "command": "C:\\cygwin64\\usr\\local\\bin\\cmoc.exe",
            "args": [
                "--verbose",
                "--compile",
                "--coco",
                "-Werror",
                "-I${workspaceFolder}\\include",
                "-o${workspaceFolder}\\bin\\${fileBasenameNoExtension}.bin",
                "${fileBasename}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4,
                    "loop": true
                }
            }
        },
        {
            "type": "shell",
            "label": "CMOC - CALL PYTHON WITH PARAMETER",
            "command": "python",
            "args": [
                "${workspaceFolder}\\.vscode\\get_source_code_dependencies.py",
                "--verbose",
                "--compile",
                "--coco",
                "--deps",
                "-Werror",
                "--intermediate",
                "${fileBasename}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4,
                    "loop": true
                }
            }
        },
        {
            "type": "shell",
            "label": "CMOC - PARAMETER TEST 2 - CALL PYTHON",
            "command": "C:\\cygwin64\\usr\\local\\bin\\cmoc.exe",
            "args": [
                "--verbose",
                "--compile",
                "--coco",
                "--deps",
                "-Werror",
                "--intermediate",
                "${fileBasename}",
                {"value":"${input:param2}","quoting": "escape"}
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4,
                    "loop": true
                }
            }
        }
    ],
    "inputs":[
        {
            "id": "param1",
            "type": "promptString",
            "description": "Param1:",
            "default": "Hello"            
        },
        {
            "id": "param2",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "python get_source_code_dependencies.py ${file}",
                "cwd": "${workspaceFolder}",
                "env": {
              "WORKSPACE": "${workspaceFolder[0]}",
              "FILE": "${file}",
              "PROJECT": "${workspaceFolderBasename}"
        
          }
        }
    }      
    ]

    
}